<?xml version="1.0"?>

<component name="org.collectionspace.acquisition.layouts.webapp">

  <extension target="org.nuxeo.ecm.platform.forms.layout.WebLayoutManager"
    point="layouts">

    <layout name="acquisition">
      <templates>
        <template mode="any">/layouts/layout_default_template.xhtml</template>
      </templates>
      <rows>
        <row><widget>accessiondate</widget></row>
      </rows>

      <widget name="accessiondate" type="text">
        <labels>
          <label mode="any">accessiondate</label>
        </labels>
        <translated>true</translated>
        <fields>
          <field schema="acquisition">accessiondate</field>
        </fields>
        <properties widgetMode="edit">
          <property name="styleClass">dataInputText</property>
        </properties>
      </widget>
      
    </layout>
  </extension>
</component>
