
<project name="main-install" basedir=".">
    <description>
    </description>
  <!-- set global properties for this build -->
    <property name="services.trunk" value=".."/>
    <property file="${services.trunk}/build.properties" />
    <property name="mvn.opts" value="" />
    <property name="src" location="src"/>

    <condition property="osfamily-unix">
        <os family="unix" />
    </condition>
    <condition property="osfamily-windows">
        <os family="windows" />
    </condition>

    <!-- this target is called in order based on the dependencies between the services -->
    <target name="setup" description="">
        <exec executable="echo">
        		<arg value="Installer: Executing services &apos;setup&apos; target." />
				</exec>    	
