			<filename>authrefs/newPerson2.xml</filename>
		</test>

	 <test ID="GetPerson1">
			<method>GET</method>
			<uri>/cspace-services/personauthorities/${PersonAuth1.CSID}/items/${Person1.CSID}</uri>
		</test>

	 <test ID="GetPerson2">
			<method>GET</method>
			<uri>/cspace-services/personauthorities/${PersonAuth1.CSID}/items/${Person2.CSID}</uri>
		</test>

